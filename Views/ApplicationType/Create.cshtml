@model ECommerce.Models.ApplicationType;

<form method="post" asp-action="Create">
    <div class="border p3">
        <div class="form-group row">
            <h2 class="text-info text-center pl-3">Add Application Type</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <br />
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>

                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"> Back </a>
                        </div>
                    </div>
                    <br />
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>
@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" /> }
}


